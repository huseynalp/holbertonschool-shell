#!/usr/bin/env bash
# Creates a PID file in /var/run and handles signals

PID_FILE="/var/run/myscript.pid"

# Write PID with sudo
sudo sh -c "echo $$ > $PID_FILE"

# Handle signals
term_handler() { echo "I hate the kill command"; }
int_handler() { echo "Y U no love me?!"; }
quit_handler() { sudo rm -f "$PID_FILE"; exit 0; }

trap term_handler SIGTERM
trap int_handler SIGINT
trap quit_handler SIGQUIT SIGTERM

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done
