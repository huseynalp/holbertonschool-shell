#!/usr/bin/env bash
# Stop the 4-to_infinity_and_beyond process without using kill

# Find the PID of the running 4-to_infinity_and_beyond script
pid=$(pgrep -f 4-to_infinity_and_beyond)

if [ -n "$pid" ]; then
    echo "Terminating process $pid..."
    exec 3>/proc/$pid/fd/1 2>/proc/$pid/fd/2
    # Send SIGTERM through /proc/ manually
    printf "\x03" >&3
fi
